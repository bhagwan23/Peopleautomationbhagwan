<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="1" name="Go.Deskera Web BVT Suite"
	parallel="false">

	<listeners>
		<listener
			class-name="deskera.web.automation.core.TestListenerOnFailure">
		</listener>
	</listeners>
	<parameter name="browser" value="chrome"></parameter>
	<parameter name="url"
		value="https://auth-qa.deskera.xyz/auth/signup"></parameter>

	<!-- System config for framework -->
	<parameter name="conf"
		value="src/test/resources/environment.config"></parameter>


	 <test name="Go.Deskera Sign Up test" parallel="false">

		<!-- US specific test data -->
		<parameter name="conf"
			value="src/test/resources/TestDataUS.config"></parameter>
		<classes>
			<class name="deskera.web.automation.tests.SignUpTest">
				<methods>
					<include name="testSignUpPage"></include>
					<include name="testSignUpWithoutPhoneNumber"></include>
					<include name="testSignUpForDeskeraBookkeeper"></include>			
				</methods>
			</class>
		</classes>
	</test>  
	
	
	 <test name="Go.Deskera Login test" parallel="false">

	<!-- US specific test data -->
		<parameter name="conf"
			value="src/test/resources/TestDataUS.config"></parameter>
			<parameter name="url"
		value="https://auth-qa.deskera.xyz/auth/signin?app=GO"></parameter>
		<classes>
			<class name="deskera.web.automation.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>				
				</methods>
			</class>
		</classes>
	</test> 
	
	<test name="Go.Deskera Open Deskera Sales test" parallel="false">

		<!-- US specific test data -->
		<parameter name="conf"
			value="src/test/resources/TestDataUS.config"></parameter>
			<parameter name="url"
		value="https://auth-qa.deskera.xyz/auth/signin?app=GO"></parameter>
		<classes>
			<class name="deskera.web.automation.tests.OpenDeskeraSalesTest">
				<methods>
					<include name="openDeskeraSalesTest"></include>				
				</methods>
			</class>
		</classes>
	</test>
	
	
	
	
</suite> 