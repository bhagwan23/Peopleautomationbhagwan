<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="1" name="ERP Web Sell Test Suite"
	parallel="false" preserve-order="true">

	<listeners>
		<listener
			class-name="deskera.web.automation.core.TestListenerOnFailure">
		</listener>
	</listeners>
	<parameter name="browser" value="chrome"></parameter>
	<!-- System config for framework -->
	<parameter name="envConf"
		value="src/test/resources/systemConfig/environment.config"></parameter>
	<parameter name="confCommon"
		value="src/test/resources/bvtSGConfig/Common.config"></parameter>
	<parameter name="confProducts"
		value="src/test/resources/bvtSGConfig/TestDataProductSG.config"></parameter>
	<parameter name="confContacts"
		value="src/test/resources/bvtSGConfig/TestDataContactSG.config"></parameter>
	<parameter name="confBuy"
		value="src/test/resources/bvtSGConfig/TestDataBuySG.config"></parameter>
	<parameter name="confSell"
		value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>





	<!-- Run Test Cases -->

  <test name="1 Create Quote Test" parallel="false">
		<classes>
		<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class name="deskera.web.automation.erp.bvtSG.tests.CreateQuoteTest">
			<parameter name="conf"
					value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>
			</class>
		</classes>
	</test> 
	 
	 <test name="2 Create Invoice Test" parallel="false">
		<classes>
		<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class name="deskera.web.automation.erp.bvtSG.tests.CreateInvoiceTest">
			
			</class>
		</classes>
	</test> 
	    
	   <test name="3 Archive Quote / Invoice Test" parallel="false">
		<classes>
		<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class name="deskera.web.automation.erp.bvtSG.tests.ArchiveQuoteInvoiceTest">
			
			</class>
		</classes>
	</test>  
	
	 <test name="4 Apply Credit Note for Invoice" parallel="false">
		<classes>
		<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class name="deskera.web.automation.erp.bvtSG.tests.ApplyCreditNoteForInvoiceTest">
			<parameter name="conf"
					value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>
			</class>
		</classes>
	</test> 
    
    <test name="5 Apply Advanced Payment For Invoice" parallel="false">
		<classes>
		<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class name="deskera.web.automation.erp.bvtSG.tests.ApplyAdvancedPaymentForInvoiceTest">
			<parameter name="conf"
					value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>
			</class>
		</classes>
	</test>  
 
	
	<test name=" 6 Create Bank" parallel="false">
		<classes>
			<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">
				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>
			<class
				name="deskera.web.automation.erp.bvtSG.tests.CreateBankTest">
				<parameter name="conf"
					value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>

			</class>
		</classes>
	</test>

	<test name="7 Bank Reconciliation" parallel="false">
		<classes>
			<class name="deskera.web.automation.erp.bvtSG.tests.LoginTest">

				<methods>
					<include name="loginTest"></include>
				</methods>
			</class>

			<class
				name="deskera.web.automation.erp.bvtSG.tests.BankReconciliationTest">
				<parameter name="conf"
					value="src/test/resources/bvtSGConfig/TestDataSellSG.config"></parameter>
			</class>
		</classes>
	</test> 


</suite> 
